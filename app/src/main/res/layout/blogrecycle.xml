<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginTop="3dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

         <RelativeLayout
             android:id="@+id/rel1_id"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             >

             <TextView
                 android:id="@+id/timeretrieve_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="time"
                 android:layout_marginTop="10dp"
                 android:background="#E8E7EAEB"
                 />

             <TextView
                 android:id="@+id/dateretrieve_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="date"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="3dp"
                 android:background="#E8E7EAEB"
                 android:layout_toRightOf="@id/timeretrieve_id"/>
         </RelativeLayout>

           <TextView
               android:id="@+id/text_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/rel1_id"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="5dp"
               android:text="text"
               android:textSize="16dp"
               android:textColor="#000000"/>

           <ImageView
               android:id="@+id/photoretrieve_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/text_id"
               android:src="@drawable/logomain"
               android:layout_marginTop="2dp"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:scaleType="fitXY"/>



           <android.support.v7.widget.CardView
               android:id="@+id/card_id"
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:layout_below="@id/photoretrieve_id"
               android:layout_marginTop="3dp"
               android:elevation="20dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="40dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/view_id"
                       android:layout_centerVertical="true"></TextView>


                   <ImageView
                       android:id="@+id/like_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/like"
                       android:layout_alignParentLeft="true"
                       android:layout_toLeftOf="@id/view_id"
                       android:layout_centerVertical="true"
                       />

                   <ImageView
                       android:id="@+id/delete_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/delete"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:layout_toRightOf="@id/view_id"/>
               </RelativeLayout>

           </android.support.v7.widget.CardView>

       </RelativeLayout>
    </android.support.v7.widget.CardView>
    
</RelativeLayout>