<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:id="@+id/card1_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
       >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="55dp"
           android:background="#FF9800">



           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bloggerhood"
               android:layout_centerVertical="true"
               android:textSize="18dp"
               android:textStyle="bold"
               android:textColor="#ffffff"
              android:layout_alignParentLeft="true"
               android:layout_marginLeft="20dp"/>

           <ImageView
               android:id="@+id/notification_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:layout_centerVertical="true"
               android:src="@drawable/notification"
               />

           <TextView
               android:id="@+id/signout_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="SignOut"
               android:textColor="#ffffff"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@id/notification_id"
               android:layout_marginRight="15dp"
               android:textStyle="bold"

               />

       </RelativeLayout>

    </android.support.v7.widget.CardView>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:src="@drawable/person"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/card1_id"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/username_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="#0B26BE"
        android:layout_below="@id/profileimage"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_id"
        android:text="email"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"/>

    <ImageView
    android:id="@+id/bloglistimage_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/email_id"
    android:src="@drawable/myblogs"
    android:layout_marginTop="25dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="80dp"
    />

    <TextView
        android:id="@+id/bloglist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blog Lists"
        android:layout_toRightOf="@+id/bloglistimage_id"
        android:layout_below="@+id/email_id"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card2_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/addblog_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/addblog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/addblog_id"
                android:text="add blog"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>